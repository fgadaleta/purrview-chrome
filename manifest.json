{
  "manifest_version": 3,
  "name": "Pickycat",
  "version": "1.0",
  "description": "Get your feed, like a picky cat",
  "permissions": [
    "storage",
    "activeTab",
    "cookies",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.anthropic.com/*",
    "https://api.x.com/*",
    "https://api.twitter.com/*",
    "https://purrview.amethix.com/*"
  ],
  "action": {
    "default_title": "Toggle Pickycat Sidebar"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}